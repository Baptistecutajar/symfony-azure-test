{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@fui/*": ["./design-system/*"]
    },


    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx", ".next/types/**/*.ts", "design-system/types", "design-system/components/**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules"]
}
